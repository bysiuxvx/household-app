{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@household/shared": ["../../packages/shared/src/index.ts"],
      "@prisma/client": ["./node_modules/.prisma/client/index.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "node_modules/.prisma/client/index.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "types": ["node", "@vercel/node"]
}
