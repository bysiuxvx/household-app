{
  "name": "household-app",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter \"@household/*\" dev",
    "dev:all": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "start": "pnpm dev:all",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,html,css,scss}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,html,css,scss}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
