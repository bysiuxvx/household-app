{
  "name": "household-app",
  "private": true,
  "version": "2.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @household/shared build",
    "dev": "pnpm --filter \"@household/*\" dev",
    "dev:all": "pnpm build:shared && concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "start": "pnpm dev:all",
    "lint": "pnpm -r --filter \"!@household/shared\" lint",
    "lint:fix": "pnpm -r --filter \"!@household/shared\" lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,html,css,scss}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,html,css,scss}\" --ignore-path .gitignore",
    "fix": "pnpm lint:fix && pnpm format",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
